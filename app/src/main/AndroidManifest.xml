<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="madalosso.dividedespesa" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".atividades.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".atividades.ViagemData"
            android:label="@string/app_name"
            android:parentActivityName=".atividades.Home">
        </activity>
        <activity
            android:name=".atividades.ViagemHome"
            android:label="@string/app_name"
            android:parentActivityName=".atividades.Home">
        </activity>
        <activity
            android:name=".atividades.DespesaData"
            android:label="@string/app_name"
            android:parentActivityName=".atividades.ViagemHome">
        </activity>
    </application>

</manifest>
